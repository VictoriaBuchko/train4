    }

    .trains-table th {
        background-color: #f8f9fa;
        color: #333;
        font-weight: 600;
    }

    .trains-table tr:hover {
        background-color: #f5f8ff;
    }

    .train-number {
        font-weight: bold;
        color: #1a3dc1;
    }

    .manager-book-btn {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 8px 12px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .manager-book-btn:hover {
