        display: flex;
        align-items: center;
        gap: 5px;
    }

    .back-button:hover {
        text-decoration: underline;
    }

    .route-info {
        background-color: white;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .route-details {
        display: flex;
        align-items: center;
