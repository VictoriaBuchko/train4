@{
}
@{
    ViewData["Title"] = "Управління квитками";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-primary">
                    <i class="bi bi-list-check"></i> Управління квитками
                </h2>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Назад до панелі
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Поиск билетов -->
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-search"></i> Пошук квитків
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="clientSearchInput" class="form-label">Пошук за клієнтом:</label>
                        <input type="text" class="form-control" id="clientSearchInput" 
                               placeholder="Введіть ім'я, прізвище або логін...">
                        <div class="form-text">Введіть мінімум 2 символи для пошуку</div>
                    </div>

                    <div class="d-grid">
                        <button type="button" class="btn btn-primary" onclick="searchTickets()">
                            <i class="bi bi-search"></i> Знайти квитки
                        </button>
                    </div>

                    <hr>

                    <div class="mb-3">
                        <label for="ticketIdInput" class="form-label">Пошук за номером квитка:</label>
                        <input type="number" class="form-control" id="ticketIdInput" 
                               placeholder="Введіть номер квитка...">
                    </div>

                    <div class="d-grid">
                        <button type="button" class="btn btn-outline-primary" onclick="searchByTicketId()">
                            <i class="bi bi-ticket-perforated"></i> Знайти квиток
                        </button>
                    </div>
                </div>
            </div>

            <!-- Статистика -->
            <div class="card shadow mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="bi bi-info-circle"></i> Інформація
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-2">
                        <strong>Заброньовані квитки:</strong> можна скасувати<br>
                        <strong>Оплачені квитки:</strong> можна скасувати з поверненням коштів<br>
                        <strong>Обмеження:</strong> неможливо скасувати квитки на минулі дати
                    </p>
                </div>
            </div>
        </div>

        <!-- Результаты поиска -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-list"></i> Результати пошуку
                    </h5>
                </div>
                <div class="card-body">
                    <div id="searchResults">
                        <div class="text-center text-muted py-5">
                            <i class="bi bi-search" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="mt-3">Введіть дані для пошуку квитків</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/pages/maneger/ManageTickets.css" />
}

@section Scripts {
    <script src="~/js/pages/maneger/ManageTickets.js"></script>
}